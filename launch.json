{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET 8 Web API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0/AdhiSreeTransportService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/AdhiSreeTransportService",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ROOT": "/usr/share/dotnet"
      }
    }
  ]
}
